let mapleader = " "
" escape chords
inoremap jk <ESC>
inoremap hh <ESC>

" plugins
set surround
set multiple-cursors
set commentary
set argtextobj
set ReplaceWithRegister
set highlightedyank
set exchange
set NERDTree
Plug 'justinmk/vim-sneak'
set which-key

" settings
set number
set relativenumber
set clipboard+=unnamed
set idearefactormode=visual
set showmode
set incsearch
set hlsearch
set ignorecase
set smartcase
set notimeout

source ~/.config/ideavim/modules/code.vim
source ~/.config/ideavim/modules/file.vim
source ~/.config/ideavim/modules/project.vim
source ~/.config/ideavim/modules/search.vim
source ~/.config/ideavim/modules/easymotion.vim
source ~/.config/ideavim/modules/run.vim
source ~/.config/ideavim/modules/idea.vim
source ~/.config/ideavim/modules/git.vim
source ~/.config/ideavim/modules/buffer.vim
source ~/.config/ideavim/modules/errors.vim
source ~/.config/ideavim/modules/window.vim
source ~/.config/ideavim/modules/open.vim
source ~/.config/ideavim/modules/insert.vim


nmap <leader>hr :source ~/.ideavimrc <cr>
